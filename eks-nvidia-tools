#!/usr/bin/env python3
"""
EKS NVIDIA Tools - Unified CLI Entry Point

This is the main executable for the unified eks-nvidia-tools command.
"""

import sys
import os

# Add the project root to Python path
project_root = os.path.dirname(os.path.abspath(__file__))
sys.path.insert(0, project_root)

if __name__ == '__main__':
    try:
        from eks_nvidia_tools.cli.main import main
        sys.exit(main())
    except ImportError as e:
        print(f"Error: Missing dependencies: {e}")
        print("Please install required packages:")
        print("pip install beautifulsoup4 tabulate pyyaml requests")
        sys.exit(1)
    except Exception as e:
        print(f"Error: {e}")
        sys.exit(1)